{
	"name": "shipos-kit",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev --concurrency 15",
		"start": "turbo start",
		"lint": "biome lint .",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"db:generate": "turbo db:generate",
		"db:migrate": "turbo db:migrate",
		"db:push": "turbo db:push",
		"db:studio": "turbo db:studio",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/node": "^24.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"prisma",
			"prisma-zod-generator"
		]
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
